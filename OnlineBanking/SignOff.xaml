<UserControl x:Class="OnlineBanking.SignOff"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineBanking"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ProjectTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/background4.png" AlignmentX="Center" AlignmentY="Top" Stretch="Uniform"/>
        </Grid.Background>
        <Button x:Name="button" Content="Accounts" HorizontalAlignment="Left" Margin="100,500,0,0" VerticalAlignment="Top" Click="Acounts_Click" Width="160"/>
        <Button x:Name="button1" Content="Payments/Transfers" HorizontalAlignment="Left" Margin="260,500,0,0" VerticalAlignment="Top" Click="PaymentTransfer_Click" Width="160"/>
        <Button x:Name="button2" Content="Investments" HorizontalAlignment="Left" Margin="420,500,0,0" VerticalAlignment="Top" Click="Investments_Click" Width="160"/>
        <Button x:Name="button3" Content="FinancialTools" HorizontalAlignment="Left" Margin="580,500,0,0" VerticalAlignment="Top" Click="FinancialTools_Click" Width="160"/>
        <Button x:Name="button4" Content="AccountManagement" HorizontalAlignment="Left" Margin="740,500,0,0" VerticalAlignment="Top" Click="AccountManagement_Click" Width="160"/>
        <Button x:Name="button5" Content="Sign Off" HorizontalAlignment="Left" Margin="1000,500,0,0" VerticalAlignment="Top" Width="90" Click="SignOff_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="100,350,0,0" TextWrapping="Wrap" Text="Please select your service from the options below." VerticalAlignment="Top" FontSize="40" Foreground="Navy"/>
    </Grid>
</UserControl>
